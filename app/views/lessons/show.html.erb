<%= provide :title, 'Result' %>
<h1>
  <span><%= @category.name %></span>
  Result <span><%= "#{@lesson.sum_correct}/#{@lesson.results.count}" %></span>
</h1>
<div class="container">
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Result</th>
        <th>Word</th>
        <th>Your Answer</th>
        <th>Answer</th>
      </tr>
    </thead>
    <tbody>
      <% @lesson.results.each do |result| %>
        <tr>
          <td>
            <% if result.word.answers.find_by(status: true) == result.answer %>
              <span class="glyphicon glyphicon-ok"></span>
            <% else %>
              <span class="glyphicon glyphicon-remove"></span>
            <% end %>
          </td>
          <td><%= result.word.body %></td>
          <td>
            <% if result.answer.nil? %>
              <span>.....Nil.....</span>
            <% else %>
              <%= result.answer.body %>
            <% end %>
          </td>
          <td>
            <%= result.word.answers.find_by(status: true).body %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>