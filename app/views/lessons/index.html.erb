<h1>List Lesson Learned</h1>
<table class="table table-bordered">
  <tbody>
    <% @lessons.each do |lesson| %>
      <tr>
        <td><%= lesson.category_name %></td>
        <td><%= "#{lesson.count_correct}/#{lesson.results.count}" %></td>
        <td><%= link_to "View", category_lesson_path(lesson.category_id,lesson) %></td>
      </tr>
    <% end %>
  </tbody>
</table>