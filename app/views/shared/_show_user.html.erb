<div class="row">
  <div class="col-md-3">
    <p align="center">
      <%= image_tag @user.avatar.url, width: "100" if @user.avatar %>
      <div style="text-align:center;"><%= @user.fullname %></div>
      <section class="stats">
        <%= render 'shared/stats' %>
      </section>
    </p>
  </div>
  <div class="col-md-9">
    <%= render 'users/follow_form' if logged_in? %>
    <h1 align="left">
      <%= link_to "#" do %>
        <span class="label label-default">Words</span>
      <% end %>
      <%= link_to "#", class: "lesson" do %>
        <span class="label label-default">Lesson</span>
      <% end %>
    </h1>
    <br/>
    <h3>Activities<hr/></h3>
      <ul class="lesson-categories">
        <% @user_lessons.each do |user_lesson| %>
          <li>
            <h4>
              <b><%= user_lesson.fullname %></b>
              leanned: <%= user_lesson.category_name %>
            <h4>
            <small>
              Correct: <%= user_lesson.count_correct %>/20
            </small>
          </li>
        <% end %>
      </ul>
  </div>
</div>